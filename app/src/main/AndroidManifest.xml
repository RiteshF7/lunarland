<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Required for launcher apps to query all installed packages on Android 11+ -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />

    <application
        android:name=".app.TermuxApplication"
        android:allowBackup="false"
        android:banner="@drawable/banner"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/application_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.TermuxApp.DayNight.DarkActionBar"
        tools:targetApi="m">

        <!-- Override TermuxActivity to prevent it from being a launcher -->
        <activity
            android:name="com.termux.app.TermuxActivity"
            android:exported="false"
            tools:node="merge"
            tools:replace="android:exported" />

        <activity
            android:name=".app.driver.DriverActivity"
            android:exported="false"
            android:label="@string/application_name"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        

        <activity
            android:name=".app.BootstrapSetupActivity"
            android:exported="false"
            android:label="@string/bootstrap_setup_title"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.termux.app.agent.TaskExecutorAgentActivity"
            android:exported="true"
            android:label="@string/application_name"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".app.backup.BackupTestActivity"
            android:exported="false"
            android:label="Backup Test"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

    </application>

</manifest>

