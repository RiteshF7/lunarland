<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Override minSdk for droidrun modules (requires API 30+) -->
    <uses-sdk tools:overrideLibrary="com.termux.droidrun.portal,com.termux.droidrun.wrapper" />

    <application
        android:name=".app.TermuxApplication"
        android:allowBackup="false"
        android:banner="@drawable/banner"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/application_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.TermuxApp.DayNight.DarkActionBar"
        tools:targetApi="m">

        <activity
            android:name=".app.DriverActivity"
            android:exported="true"
            android:label="@string/application_name"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".app.TaskExecutorActivity"
            android:exported="false"
            android:label="@string/task_executor_title"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <activity
            android:name=".app.BootstrapSetupActivity"
            android:exported="false"
            android:label="@string/bootstrap_setup_title"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:screenOrientation="portrait" />

        <activity
            android:name=".app.LunarHomeScreenActivity"
            android:exported="false"
            android:label="Lunar UI HomeScreen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <!-- Droidrun Test Activity -->
        <activity
            android:name=".app.DroidrunTestActivity"
            android:exported="false"
            android:label="Droidrun Test"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <!-- Droidrun services are declared in droidrun-portal module's manifest -->

    </application>

</manifest>

