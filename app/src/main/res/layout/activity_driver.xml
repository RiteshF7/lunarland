<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/driver_command_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/driver_hint"
        android:inputType="text|textNoSuggestions|textMultiLine"
        android:maxLines="4"
        android:minLines="1" />

    <Button
        android:id="@+id/driver_execute_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:text="@string/driver_execute" />

    <TextView
        android:id="@+id/driver_status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/driver_status_idle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>

