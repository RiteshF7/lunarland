<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/driver_command_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/driver_hint"
        android:inputType="text|textNoSuggestions|textMultiLine"
        android:maxLines="4"
        android:minLines="1" />

    <Button
        android:id="@+id/driver_execute_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:text="@string/driver_execute" />

    <Button
        android:id="@+id/driver_launch_termux_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/driver_launch_termux" />

    <Button
        android:id="@+id/driver_open_task_executor_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/task_executor_open_button" />

    <Button
        android:id="@+id/driver_launch_lunar_homescreen_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Launch Lunar UI HomeScreen" />

    <Button
        android:id="@+id/driver_preview_agent_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Preview AI Agent Sphere" />

    <TextView
        android:id="@+id/driver_status_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/driver_status_idle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/driver_logs_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <TextView
            android:id="@+id/driver_logs_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:fontFamily="monospace"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textIsSelectable="true" />

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

