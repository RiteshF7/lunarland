<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/bootstrap_setup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bootstrap_setup_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <ProgressBar
        android:id="@+id/bootstrap_setup_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:max="100"
        android:progress="0"
        android:visibility="visible" />

    <TextView
        android:id="@+id/bootstrap_setup_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="24dp" />

    <ScrollView
        android:id="@+id/bootstrap_setup_log_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:background="#F5F5F5"
        android:padding="12dp">

        <TextView
            android:id="@+id/bootstrap_setup_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:fontFamily="monospace"
            android:textIsSelectable="true" />
    </ScrollView>

    <TextView
        android:id="@+id/bootstrap_setup_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#D32F2F"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/bootstrap_setup_retry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bootstrap_setup_retry"
        android:visibility="gone" />

</LinearLayout>

